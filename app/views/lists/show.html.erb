<h1>Lists#show</h1>
<p>Find me in app/views/lists/show.html.erb</p>

<h2><%= @list.name %></h2>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.movie.title %></li>
    <li class="list-group-item"><%= bookmark.comment %></li>
    <%= link_to "Delete",
      bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  <% end %>
</ul>



<%= link_to "See all Lists ", lists_path %>
